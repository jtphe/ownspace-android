<resources>

    <!-- Client application theme (CCI Campus) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryClient</item>
        <item name="colorPrimary">@color/colorPrimaryClient</item>
        <item name="colorSecondary">@color/colorSecondaryClient</item>
        <item name="colorAccent">@color/subtitle</item>
    </style>

    <!-- Authentication theme (OwnSpace theme) -->
    <style name="AuthenticationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextLogin" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="TitleUserInfos" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextUserInfos" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
